<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="NullableFox.AoXiangToDoList.Views.UserControls.ProgressPomodoro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NullableFox.AoXiangToDoList.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    SizeChanged="UserControl_SizeChanged"
    mc:Ignorable="d">

    <Grid>
        <Image
            x:Name="pomodoroImage"
            Margin="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Source="/Assets/Pomodoro_Large.png"
            Stretch="Uniform">
            <Image.Clip>
                <RectangleGeometry x:Name="clipRect" Rect="0,0,1000,1000" />
            </Image.Clip>
        </Image>
        <Image
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Source="/Assets/Pomodoro_Large_Figure.png"
            Stretch="Uniform" />
    </Grid>
</UserControl>
