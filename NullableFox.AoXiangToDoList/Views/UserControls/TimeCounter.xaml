<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="NullableFox.AoXiangToDoList.Views.UserControls.TimeCounter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:NullableFox.AoXiangToDoList.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="50" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="countDownBlock" Grid.Column="1" />
        <ProgressBar
            x:Name="countDownProgressBar"
            Margin="0,0,10,0"
            HorizontalAlignment="Stretch"
            Foreground="Red"
            Maximum="1"
            Minimum="0" />
    </Grid>
</UserControl>
